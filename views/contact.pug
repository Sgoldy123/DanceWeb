extends base.pug
block scripts
  script(src='/static/index.js')

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content
    
    nav#navbar.top
                
                ul
                    div#logo 
                        img(src= "/static/img/logo.png")
                        |SS
                    li #[a(href='/') Home]
                    li #[a(href='/') Contact]
                    li #[a(href='/') Services]
                    li #[a(href='/') Class Info]
                    li #[a(href='/') About]
    
    h1 Contact us
    form(action="/contact" method="post" id="header")
        input(type="text" class="myinput" name="name" id="name" placeholder="Enter your name")
        input(type="text" class="myinput" name="contact" id="contact" placeholder="Enter contact")
        input(type="text" class="myinput" name="age" id="age" placeholder="Age")
        textarea(type="text" class="myinput" name="address" id="address" placeholder="Address")
        <button class="btn" id="adbtn">Submit</button>
    